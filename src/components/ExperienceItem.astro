---
const { title, date, description } = Astro.props;
---

<div class="relative flex items-start">
    <div
        class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
    >
    </div>

    <div class="pl-6">
        <time class="mb-1 text-sm font-normal leading-none text-sky-200/80"
            >{date}</time
        >

        <h3 class="text-lg font-semibold text-yellow-200 mt-2 mb-2">{title}</h3>

        <p class="mb-4 text-base font-normal text-gray-200 text-pretty">
            {description}
        </p>
    </div>
</div>
