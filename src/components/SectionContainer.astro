---
const { class: className, id, type = "default" } = Astro.props;

let typeClass = "";



if (type === "inicio") {
    typeClass = "w-full mx-auto lg:w-full 2xl:pt-20 md:pt-50 pt-10 2xl:pb-50 md:pb-50 pb-24";
} else if (type === "experiencia") {
    typeClass = "w-full mx-auto lg:w-full lg:pt-30 pt-20 pb-24 ";
} else if (type === "proyectos") {
    typeClass = "w-full mx-auto lg:w-full lg:pt-30 pt-20 pb-24";
} else if (type === "habilidades") {
    typeClass = "w-full mx-auto lg:w-full lg:pt-30 pt-20 pb-24";
}
---

<section id={id} class={ typeClass }>
    <slot />
</section>
