---
// Links del menú
const navLinks = [
  { url: '#top', name: 'Inicio' },
  { url: '#experiencia', name: 'Experiencia' },
  { url: '#proyectos', name: 'Proyectos' },
  { url: '#habilidades', name: 'Habilidades' },
];
---

<style>
  .montserrat-400 {
    font-family: "Montserrat", sans-serif;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;
  }
  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 30px;
    height: 24px;
    gap: 5px;
    cursor: pointer;
    z-index: 50;
    transition: all 0.3s ease;
  }
  .hamburger span {
    display: block;
    height: 3px;
    background: #00ffcc;
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  .hamburger.open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  .hamburger.open span:nth-child(2) {
    opacity: 0;
  }
  .hamburger.open span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  .sidebar {
    position: fixed;
    top: 0;
    right: 0;
    width: 75vw;
    max-width: 400px;
    height: 100vh;
    background: #0a192f;
    box-shadow: -10px 0px 30px -15px rgba(2, 12, 27, 0.7);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100px;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 50;
  }
  .sidebar.open {
    transform: translateX(0);
  }
  .sidebar nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
    font-family: monospace;
    color: #ccd6f6;
  }
  .sidebar nav a {
    font-size: 1.2rem;
    color: inherit;
    text-decoration: none;
    position: relative;
  }
  .sidebar nav a::before {
    content: attr(data-number);
    color: #00ffcc;
    margin-right: 8px;
    font-size: 0.9rem;
  }

  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 40;
  }
  .overlay.show {
    opacity: 1;
    pointer-events: auto;
  }

  @media(min-width: 768px){
    .hamburger {
      display: none;
    }
    .sidebar, .overlay {
      display: none;
    }
  }
</style>

<header
  class="text-gray-200 montserrat-400 shadow-sm backdrop-blur-lg sticky top-0 flex justify-between items-center py-2 w-full bg-[rgba(31,41,55,0.5)] z-10"
>
  <div class="flex items-center 2xl:px-60 md:px-16 px-8">
    <div class="text-3xl lg:text-6xl font-bold text-green-300 lg:mr-2 mr-1">
      C
    </div>
    <div class="flex flex-col items-start lg:text-base text-xs">
      <div class="font-semibold text-white uppercase">NOGUERALES</div>
      <div class="font-medium text-gray-300 uppercase">BACK-END</div>
    </div>
  </div>

  <div class="flex items-center gap-4 relative">
    <nav
      class="hidden lg:flex flex-row gap-y-4 2xl:gap-x-10 md:gap-x-5 text-center opacity-80 lg:text-base md:text-sm text-xs 2xl:px-60 md:px-16"
    >
      {navLinks.map((link) => (
        <a href={link.url} class="hover:underline">{link.name}</a>
      ))}
    </nav>

    <div class="hamburger" id="menu-toggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</header>

<!-- Overlay oscuro -->
<div id="overlay" class="overlay"></div>

<!-- Menú lateral móvil -->
<aside id="sidebar" class="sidebar mx-8">
  <nav id="sidebar-links">
    {navLinks.map((link, index) => (
      <a href={link.url} data-number={`0${index + 1}.`}>{link.name}</a>
    ))}
  </nav>
</aside>

<script is:inline>
  const toggleButton = document.getElementById('menu-toggle');
  const sidebar = document.getElementById('sidebar');
  const overlay = document.getElementById('overlay');
  const sidebarLinks = document.querySelectorAll('#sidebar a');

  function closeMenu() {
    sidebar.classList.remove('open');
    toggleButton.classList.remove('open');
    overlay.classList.remove('show');
  }

  toggleButton.addEventListener('click', () => {
    toggleButton.classList.toggle('open');
    sidebar.classList.toggle('open');
    overlay.classList.toggle('show');
  });

  overlay.addEventListener('click', closeMenu);

  sidebarLinks.forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  window.addEventListener('resize', () => {
    if (window.innerWidth > 768) {
      closeMenu();
    }
  });
</script>
